<?xml version="1.0"?>
<launch>
    <!--  ************** Global Parameters ***************  -->
    <param name="/use_sim_time" value="true"/>
    <arg name="controller"  default="mpc" doc="opt: dwa, mpc, pure_pursuit"/>

    <!--  ************** Stage Simulator ***************  -->
    <node pkg="stage_ros" type="stageros" name="stageros" args="$(find racecar_stage)/stage/maze_carlike.world">
        <remap from="base_scan" to="/scan"/>
    </node>

    <!--  ************** Map Server **************  -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find racecar_stage)/maps/test.yaml" output="screen">
        <param name="frame_id" value="/map"/>
    </node>

    <node pkg="racecar_stage" type="fake_imu.py" name="fake_imu" output="screen"/>

</launch>